<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
        <%= form_with(model: listing, class: "needs-validation", novalidate: true) do |form| %>
          <% if listing.errors.any? %>
            <div class="alert alert-danger">
              <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

              <ul>
                <% listing.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :title, class: "form-label" %>
            <%= form.text_area :title, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :description, class: "form-label" %>
            <%= form.text_field :description, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :listing_type, class: "form-label" %>
            <%= form.select :listing_type, options_for_select(['Type 1', 'Type 2', 'Type 3']), { prompt: 'Select Listing Type' }, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= form.submit "Save Listing", class: "btn btn-primary" %>
          </div>
        <% end %>
    </div>
  </div>
</div>