<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow p-4">
        <%= form_with(model: employee, local: true) do |form| %>
        <div class="modal-body">
          <% if employee.errors.any? %>
          <div class="alert alert-danger">
            <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

            <ul>
              <% employee.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :email, class: "form-label" %>
          <%= form.email_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :city, class: "form-label" %>
          <%= form.text_field :city, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :contact_number, class: "form-label" %>
          <%= form.number_field :contact_number, class: "form-control" %>
        </div>

        <div class="mb-3">
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
          <%= form.submit "Save", class: "btn btn-success", data: { action: 
           "click=>boostrap-modal#submitEnd"} %>
        </div>
      <% end %>
    </div>
      </div>
    </div>
  </div>

</div>
       
          