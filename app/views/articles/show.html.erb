<div class="col-lg-10 mx-auto mt-2">
  <%= link_to 'Back', 'javascript:history.back()', class: "btn btn-success btn-block me-1" %>
  
  <%= image_tag @article.image, style: "border-radius: 1%; width:80%; margin-top:25px; height:30%;" if @article.image.attached? %>
  
    
  <h1><%= @article.title %></h1>
  <p><%= @article.body %></p>

  <div class="d-flex">
    <%= link_to "Edit", edit_article_path(@article),data: {controller:"edit-article"}, class: "btn btn-success me-1" %>
    <%= link_to "New Article", new_article_path, class: "btn btn-success me-1" %>
    <%= link_to "Destroy", article_path(@article)  ,class: "btn btn-success me-1", data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    } %>
  </div

  <h2>Comments</h2>
  <%= render @article.comments %>

  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
</div>
