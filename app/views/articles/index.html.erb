<div class="col-lg-10 mx-auto mt-2">
  <div class="mt-0">
  </div>
  <div class="container text-center">
    <h1>Articles</h1>
    <div class="row mt-5">
      <% @articles.each do |article| %>
        <div class="col-md-4 mb-3" style="width:24%;">
          <div class="card shadow border-0" style="width: 18rem;">
            <div class="card-img-container" style="height: 150px; overflow: hidden;">
              <% if article.image.attached? %>
                <%= link_to article_path(article) do %>
                  <%= image_tag article.image, class: "img-fluid" %>
                <% end %>
              <% end %>
            </div>
            <div class="card-body" style="background: rgba(255, 255, 255, 0.7);">
              <h5 class="card-title"><%= link_to article.title.truncate(25), article, style: "text-decoration: none; color: #333;" %></h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>